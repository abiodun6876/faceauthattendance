{
  "short_name": "FaceAuth",
  "name": "FaceAuthAttendance Platform",
  "description": "Multi-tenant face recognition attendance system for organizations and businesses",
  "id": "/?source=pwa",
  "start_url": "/",
  "background_color": "#667eea",
  "display": "standalone",
  "display_override": ["standalone", "minimal-ui", "window-controls-overlay"],
  "scope": "/",
  "theme_color": "#667eea",
  "orientation": "portrait-primary",
  "categories": ["business", "productivity", "education", "security"],
  "icons": [
