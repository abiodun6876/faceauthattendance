    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Take Attendance",
      "short_name": "Attendance",
      "description": "Clock in/out with face recognition",
      "url": "/attendance",
      "icons": [{ "src": "/icons/icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "Enroll User",
      "short_name": "Enroll",
      "description": "Register new staff/student with face biometrics",
      "url": "/enroll",
      "icons": [{ "src": "/icons/icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "View Reports",
      "short_name": "Reports",
      "description": "Attendance analytics and reports",
      "url": "/attendance-management",
      "icons": [{ "src": "/icons/icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "Device Setup",
      "short_name": "Setup",
      "description": "Configure device and branch settings",
      "url": "/device-setup",
      "icons": [{ "src": "/icons/icon-96x96.png", "sizes": "96x96" }]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/dashboard-mobile.png",
      "type": "image/png",
      "sizes": "1080x1920",
      "form_factor": "narrow",
      "label": "Dashboard - Mobile View"
    },
    {
      "src": "/screenshots/attendance-mobile.png",
      "type": "image/png",
      "sizes": "1080x1920",
      "form_factor": "narrow",
      "label": "Face Attendance - Mobile"
    },
    {
      "src": "/screenshots/enrollment-mobile.png",
      "type": "image/png",
      "sizes": "1080x1920",
      "form_factor": "narrow",
      "label": "Biometric Enrollment"
    },
    {
      "src": "/screenshots/dashboard-desktop.png",
      "type": "image/png",
      "sizes": "1920x1080",
      "form_factor": "wide",
      "label": "Dashboard - Desktop View"
    },
    {
      "src": "/screenshots/attendance-desktop.png",
      "type": "image/png",
      "sizes": "1920x1080",
      "form_factor": "wide",
      "label": "Attendance Management"
    }
  ],
  "lang": "en-US",
  "dir": "ltr",
  "prefer_related_applications": false,
  "related_applications": [],
  "protocol_handlers": [],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "scope_extensions": [],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "attendance_export",
          "accept": ["text/csv", "application/pdf"]
        }
      ]
    }
  },
  "capture_links": "new-client",
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"]
      },
      "name": "Import Attendance Data"
    }
  ],
  "permissions": [
    "camera",
    "geolocation",
    "notifications",
    "clipboard-write",
    "clipboard-read",
    "storage"
  ],
  "serviceworker": {
    "src": "/service-worker.js",
    "scope": "/",
    "type": "module"
  }
}